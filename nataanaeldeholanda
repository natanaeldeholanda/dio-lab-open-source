package exercicios;

import java.util.Scanner;

public class QuadradoCubo {
	
	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		System.out.println("Vamos calcular o número que você digitar ao quadrado e ao cubo.");
		System.out.printf("Digite o número da base: ");
		double base = scanner.nextDouble();
		double resQuadrado = Math.pow(base, 2);
		System.out.printf("Os número " + base + " elevado ao quadrado é: " + resQuadrado);
		double resCubo = Math.pow(base, 3);
		System.out.printf("\nJá o número " + base + " elevado ao cubo é:" + resCubo);
				
		scanner.close();
	}

}
